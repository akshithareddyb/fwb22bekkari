extends layout

block content
  h1= title
  p Welcome to #{title}
  - var results = [{Season_type: "Spring",temperature: 21.1,Season_month:"March"},{Season_type: "Summer",temperature: 27.3,Season_month:"June"},{Season_type: "Winter",temperature: 2.3,Season_month:"November"}];
   div(class = "container-fluid")
    div(class = "row")
     each s,index in results
        div(class="col-sm-4" onclick=`buy(${index})`) Season-type: #{s.Season_type} 
        br
        br 
        div(class="col-sm-4" onclick=`buy(${index})`) temperature: #{s.temperature}
        br
        br  
        div(class="col-sm-4" onclick=`buy(${index})`) Season-month: #{s.Season_month}
        script.
                function buy(itemNo){
                    alert(`You chosen season ${itemNo+1}`)
                }
